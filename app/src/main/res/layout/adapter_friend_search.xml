<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/com.example.lwq.damaiclient"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mm_listitem"
    android:id="@+id/re_frineds"
    android:orientation="vertical"
    >
    <com.example.lwq.damaiclient.widget.RoundAngleImageView
        android:id="@+id/chat_image_user"
        android:layout_width="35dip"
        android:layout_height="35dip"
        app:roundHeight="5dp"
        app:roundWidth="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/user"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/chat_tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="逗乐勒"
        android:layout_toRightOf="@+id/chat_image_user"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|left"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/tv_addfriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="加为好友"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:gravity="center_vertical|left"
        android:layout_marginLeft="20dp"
        android:textColor="@color/lanse" />
</RelativeLayout>

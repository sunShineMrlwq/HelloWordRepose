<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >
        <ImageView
            android:id="@+id/item_image"
            android:layout_width="135dp"
            android:layout_height="200dp"
            android:src="@mipmap/l1"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:layout_toRightOf="@+id/item_image"
            >
            <TextView
                android:id="@+id/title_tj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="池昌旭 陪你2016北京This is JCW"
                android:layout_alignParentTop="true"
                android:textSize="16sp"
                android:lines="2"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/rect_bule"
                android:text="预顶中"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:layout_below="@+id/title_tj"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="时间:2016.01.23"
                android:textSize="14sp"
                android:singleLine="true"
                android:layout_above="@+id/address_tv"
                />
            <TextView
                android:id="@+id/address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="场馆:北京展览馆剧场"
                android:layout_marginTop="6dp"
                android:textSize="14sp"
                android:singleLine="true"
                android:layout_above="@+id/price_tv"
                />
            <TextView
                android:id="@+id/price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="票价:280-1280元"
                android:textSize="14sp"
                android:singleLine="true"
                android:layout_marginTop="6dp"
                android:layout_alignParentBottom="true"
                android:textColor="@color/colorAccent"
                />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/main_bg_color"/>
</LinearLayout>

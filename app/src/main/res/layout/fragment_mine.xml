<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/com.example.lwq.damaiclient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_bg_color"
    >
    <com.example.lwq.damaiclient.widget.AppBaryx
        android:id="@+id/footbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="170dip" >
                <ImageView
                    android:id="@+id/fragment_my_center_to"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    />
                <com.example.lwq.damaiclient.widget.CircularImageView
                    android:id="@+id/user_CircularImageView"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@mipmap/user"
                    app:border="true"
                    app:border_color="@color/white"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    app:border_width="1.1dp"
                    app:selector="true"
                    app:selector_color="#4403a9f4"
                    app:selector_stroke_color="#aa5677fc"
                    app:selector_stroke_width="4dp"
                    app:shadow="true"
                    />
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_CircularImageView"
                    android:text="欢迎，刘先生"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:shadowColor="#000000"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="1"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/user_name"
                    android:layout_marginBottom="10dp"
                    android:gravity="bottom|center_horizontal"
                    >
                    <TextView
                        android:id="@+id/tv_jifen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="积分: 100000  您的用户等级是："
                        android:shadowColor="#ff000000"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="1"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text=" 新用户"
                        android:shadowColor="#ff000000"
                        android:layout_toRightOf="@+id/tv_jifen"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:drawableBottom="@drawable/underline"
                        android:shadowRadius="1"
                        android:textColor="@color/lanse"
                        android:textSize="14sp"
                        />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/user_CircularImageView"
                    android:text="积分"
                    android:drawableTop="@mipmap/icon_shoucang"
                    android:drawablePadding="4dp"
                    android:layout_marginTop="55dp"
                    android:shadowColor="#ff000000"
                    android:gravity="center_horizontal"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="1"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/user_CircularImageView"
                    android:text="账单"
                    android:drawableTop="@mipmap/icon_pinglunda"
                    android:drawablePadding="4dp"
                    android:layout_marginTop="55dp"
                    android:shadowColor="#ff000000"
                    android:gravity="center_horizontal"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="1"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:id="@+id/re_mine_yhj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="优惠券"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:drawableLeft="@mipmap/hj"
                        android:drawablePadding="8dp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/icon_arrowright"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="12dp"
                    android:background="@color/gray"/>
                <RelativeLayout
                    android:id="@+id/re_mine_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="消息中心"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:drawableLeft="@mipmap/ty"
                        android:drawablePadding="8dp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/icon_arrowright"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="12dp"
                    android:background="@color/gray"/>
                <RelativeLayout
                    android:id="@+id/re_mine_map"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="附近娱乐"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:drawableLeft="@mipmap/fujin"
                        android:drawablePadding="8dp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/icon_arrowright"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/main_bg_color"/>
                <RelativeLayout
                    android:id="@+id/re_mine_zxing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="扫一扫"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:drawableLeft="@mipmap/ych"
                        android:drawablePadding="8dp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/icon_arrowright"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="12dp"
                    android:background="@color/gray"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="去逛逛"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:drawableLeft="@mipmap/qz"
                        android:drawablePadding="8dp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/icon_arrowright"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="12dp"
                    android:background="@color/gray"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="更多"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:drawableLeft="@mipmap/qiandao"
                        android:drawablePadding="8dp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/icon_arrowright"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/main_bg_color"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

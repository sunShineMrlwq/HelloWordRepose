<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/com.example.lwq.damaiclient"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:background="@drawable/mm_listitem"
    android:orientation="vertical"
    >
    <com.example.lwq.damaiclient.widget.RoundAngleImageView
        android:id="@+id/chat_image_user"
        android:layout_width="55dip"
        android:layout_height="55dip"
        app:roundHeight="12dp"
        app:roundWidth="12dp"
        android:layout_margin="10dip"
        android:layout_centerVertical="true"
        android:src="@mipmap/user"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/chat_tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="逗乐勒"
        android:layout_toRightOf="@+id/chat_image_user"
        android:layout_toLeftOf="@+id/chat_tv_time"
        android:gravity="center_vertical|left"
        android:paddingTop="12dp"
        />
    <TextView
        android:id="@+id/chat_tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_toRightOf="@+id/chat_image_user"
        android:layout_toLeftOf="@+id/chat_tv_time"
        android:gravity="center_vertical|left"
        android:layout_alignParentBottom="true"
        android:paddingBottom="12dp"
        android:text="这是一条很长很长的信息，你布局的对吗，哈哈哈，你做得对"
        android:textColor="@color/text_color"
        />
    <TextView
        android:id="@+id/chat_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="12dp"
        android:text="2015.12.12"
        android:textColor="@color/text_color"
        />
</RelativeLayout>

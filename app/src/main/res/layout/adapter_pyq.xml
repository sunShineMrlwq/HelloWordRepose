<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/com.example.lwq.damaiclient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >
    <com.example.lwq.damaiclient.widget.RoundAngleImageView
        android:id="@+id/chat_image_user"
        android:layout_width="55dip"
        android:layout_height="55dip"
        app:roundHeight="12dp"
        app:roundWidth="12dp"
        android:layout_margin="10dip"
        android:src="@mipmap/user"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/chat_tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="逗乐勒"
        android:layout_toRightOf="@+id/chat_image_user"
        android:gravity="center_vertical|left"
        android:paddingTop="15dp"
        />

    <TextView
        android:id="@+id/chat_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_below="@+id/verticalLine"
        android:padding="12dp"
        android:text="2015.12.12"
        android:layout_marginLeft="65dp"
        android:textColor="@color/text_color"
        />
    <LinearLayout
        android:id="@+id/verticalLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/chat_image_user"
        android:layout_marginTop="45dp"
        android:gravity="top|left"
        >
        <TextView
            android:id="@+id/chat_tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="left"
            android:paddingBottom="12dp"
            android:text="这是一条很长很长的信息，你布局的对吗，哈哈哈，你做得对"
            android:textColor="@color/text_color"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/c1"
            />

    </LinearLayout>

</RelativeLayout>

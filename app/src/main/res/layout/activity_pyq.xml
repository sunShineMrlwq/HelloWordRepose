<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/com.example.lwq.damaiclient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_bg_color"
    >
    <com.example.lwq.damaiclient.widget.AppBaryx
        android:id="@+id/footbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="235dip" >
                <ImageView
                    android:id="@+id/fragment_my_center_to"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:scaleType="centerCrop"
                    />
                <com.example.lwq.damaiclient.widget.CircularImageView
                    android:id="@+id/user_CircularImageView"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@mipmap/user"
                    app:border="true"
                    app:border_color="@color/white"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    app:border_width="1.1dp"
                    app:selector="true"
                    app:selector_color="#4403a9f4"
                    app:selector_stroke_color="#aa5677fc"
                    app:selector_stroke_width="4dp"
                    app:shadow="true"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/user_CircularImageView"
                    android:text="逗乐勒"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="55dp"
                    android:shadowColor="#ff000000"
                    android:gravity="center_vertical|right"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="1"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    />
            </RelativeLayout>
            <com.example.lwq.damaiclient.widget.DmListView
                android:id="@+id/DmListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

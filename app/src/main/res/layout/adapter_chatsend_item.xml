<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/com.example.lwq.damaiclient"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_bg_color"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    >
    <TextView
        android:id="@+id/chat_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="2015.12.12"
        android:visibility="gone"
        android:textColor="@color/text_color"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="20dp"
        >
        <com.example.lwq.damaiclient.widget.RoundAngleImageView
            android:id="@+id/chat_image_user"
            android:layout_width="40dip"
            android:layout_height="40dip"
            app:roundHeight="8dp"
            app:roundWidth="8dp"
            android:layout_margin="4dip"
            android:layout_alignParentRight="true"
            android:src="@mipmap/user"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/chat_tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/chat_image_user"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@drawable/rect_green"
            android:text="哈哈哈，你做得对"
            android:textColor="@color/text_color"
            />

        <ProgressBar
            android:id="@+id/progress_lin"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/chat_tv_message"
            android:layout_centerVertical="true"
            android:indeterminateDrawable="@drawable/frame_loading" />
    </RelativeLayout>
</LinearLayout>
